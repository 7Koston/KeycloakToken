<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".main.MainActivity">

  <LinearLayout
    android:id="@+id/llJwt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bRefresh"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <Button
        android:id="@+id/bLogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/b_login" />

      <Button
        android:id="@+id/bLogout"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/b_logout" />

      <Button
        android:id="@+id/bRefresh"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/b_refresh" />
    </LinearLayout>

    <TextView
      android:id="@+id/tvUserId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvSurname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvRoles"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_margin="16dp"
      android:background="@android:color/darker_gray"
      android:visibility="visible" />

    <TextView
      android:id="@+id/tvTokenType"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvIdToken"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvSessionState"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvNotBeforePolicy"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvExpiresIn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvRefreshExpiresIn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvTokenExpirationDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvRefreshTokenExpirationDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_margin="16dp"
      android:background="@android:color/darker_gray"
      android:visibility="visible" />

    <TextView
      android:id="@+id/tvAccessToken"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvRefreshToken"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</androidx.core.widget.NestedScrollView>
